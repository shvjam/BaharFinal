{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=BarbariBahar;Trusted_Connection=True;TrustServerCertificate=True;",
    "SqliteConnection": "Data Source=BarbariBahar.db"
  },
  "Jwt": {
    "SecretKey": "YOUR_SUPER_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG!",
    "Issuer": "BarbariBaharAPI",
    "Audience": "BarbariBaharClient"
  },
  "FarazSmsSettings": {
    "ApiKey": "YOUR_FARAZ_SMS_API_KEY",
    "Originator": "+983000505",
    "PatternCode": "YOUR_OTP_PATTERN_CODE"
  },
  "ZarinpalSettings": {
    "MerchantId": "YOUR_ZARINPAL_MERCHANT_ID",
    "IsSandbox": true,
    "CallbackUrl": "https://localhost:5001/api/payment/verify"
  },
  "FrontendUrl": "http://localhost:5173",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}